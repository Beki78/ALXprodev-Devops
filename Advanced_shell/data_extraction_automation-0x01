#!/bin/bash

# Read the JSON data from data.json
DATA_FILE="data.json"

# Extract the Pokémon’s name, height, weight, and type
NAME=$(jq -r '.name' "$DATA_FILE")
HEIGHT=$(jq -r '.height' "$DATA_FILE")
WEIGHT=$(jq -r '.weight' "$DATA_FILE")
TYPE=$(jq -r '.types[0].type.name' "$DATA_FILE")

# Convert height and weight to human-readable format
formatted_height=$(echo "scale=1; $HEIGHT / 10" | bc)
formatted_weight=$(echo "scale=1; $WEIGHT / 10" | bc)

# Format the output
echo "$NAME is of type $TYPE, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."